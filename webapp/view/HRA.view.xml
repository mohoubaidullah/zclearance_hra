					<!--<Button text="Cancel" type="Reject" press="onReject"/>-->
					<!--		</contentRight>-->
					<!-- sap.ui.core.Control -->
					<!--	</Bar>-->
					<!--</footer>-->
				</Page>
			</pages>
		</App>
</mvc:View>